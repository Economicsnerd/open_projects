<p id="notice"><%= notice %></p>
  <div class = "card-body">
      <h2 class="card-title d-flex justify-content-between mb-4">
        <span>Projects</span>
        <%= link_to 'New Project', new_project_path, class: "btn btn-success" %>
      </h2>
    <div class = "row"> 
      <% @projects.each do |project|%>
        <div class = "col-sm">
        <%=link_to project, class: 'text-decoration-none' do%>   
            <div class= "card project-card mb-3">
              <img class = "card-img-top" src = "https://images.unsplash.com/photo-1531403009284-440f080d1e12?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80">
              <div class = "card-body"> 
                <h4 class="card-title text-dark"> <b><%= project.name %></b></h4>
                <p class = "text-dark"> <%= project.description %> </p>
              </div>
            </div>
        </div> 
        <% end %>

      <% end %>

  </div>
<br>


